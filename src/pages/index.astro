---
import PlotFigure from '../components/PlotFigure.astro';
import penguins from '../assets/penguins.json';
import * as Plot from "@observablehq/plot";
---

<div class="container">
	<h1>Graphique penguins</h1>
	<PlotFigure
		options={{
			marks: [
			Plot.dot(penguins, {
				x: "flipper_length_mm",
				y: "body_mass_g",
				stroke: "species"
			})
			]
		}}
		/>
</div>
<style>
  body {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 100vh;
    margin: 0;
    font-family: "Inter", system-ui, sans-serif;
    background: linear-gradient(135deg, #f0f4ff, #e6f9f0);
  }

  h1 {
    margin-bottom: 1.5rem;
    font-size: 2rem;
    font-weight: 600;
    background: linear-gradient(90deg, #2563eb, #10b981);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  PlotFigure {
    max-width: 800px;
    width: 100%;
  }

  .container {
    background: white;
    border-radius: 1rem;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
    padding: 2rem 3rem;
    max-width: 900px;
    width: 90%;
    text-align: center;
    animation: fadeIn 0.8s ease-in-out;
  }

  @keyframes fadeIn {
	from {
	  opacity: 0;
	  transform: translateY(20px);
	}
	to {
	  opacity: 1;
	  transform: translateY(0);
	}
  }

</style>
